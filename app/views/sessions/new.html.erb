<h1>Login</h1>
<%= form_tag sessions_path do %>
<div class="form-group">
	<%= label_tag :username %>
	<%= text_field_tag :username, (params[:username] unless params[:username].blank?) %>
</div>
<div class="form-group">
	<%= label_tag :password %>
	<%= password_field_tag :password %>
</div>
<%= submit_tag :submit, :class => "btn btn-primary" %>
<% end %>